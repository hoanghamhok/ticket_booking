{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "incremental": false,
    "resolvePackageJsonExports": false,
    "resolvePackageJsonImports": false,
    "isolatedModules": false,
    "declaration": false
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*.spec.ts",
    "generated/**/*",
    "prisma.config.ts",
    "prisma/**/*.ts"
  ]
}
