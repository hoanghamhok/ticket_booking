generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  role      Role      @default(USER)
  createdAt DateTime  @default(now())
  bookings  Booking[]
  tickets   Ticket[]
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  startAt     DateTime
  endAt       DateTime
  createdAt   DateTime @default(now())
  tickets     Ticket[]
}

model Ticket {
  id           String       @id @default(cuid())
  eventId      String
  price        Int
  status       TicketStatus @default(AVAILABLE)
  holdById     String?
  holdUntil    DateTime?
  createdAt    DateTime     @default(now())
  bookingItems BookingItem?
  event        Event        @relation(fields: [eventId], references: [id], onDelete: Cascade)
  holdBy       User?        @relation(fields: [holdById], references: [id])

  @@index([eventId, status])
  @@index([holdUntil])
}

model Booking {
  id        String        @id @default(cuid())
  userId    String
  status    BookingStatus @default(HOLD)
  total     Int           @default(0)
  expiresAt DateTime?
  createdAt DateTime      @default(now())
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     BookingItem[]

  @@index([status, expiresAt])
}

model BookingItem {
  id        String   @id @default(cuid())
  bookingId String
  ticketId  String   @unique
  price     Int
  createdAt DateTime @default(now())
  booking   Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  ticket    Ticket   @relation(fields: [ticketId], references: [id])

  @@unique([bookingId, ticketId])
}

enum Role {
  USER
  ADMIN
}

enum TicketStatus {
  AVAILABLE
  HOLD
  PAID
}

enum BookingStatus {
  HOLD
  PAID
  CANCELED
  EXPIRED
}
